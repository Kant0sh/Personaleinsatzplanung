<UserControl x:Class="Personaleinsatzplanung.CustomControls.DateTimePicker_VonBis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personaleinsatzplanung.CustomControls"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="bis" Grid.Column="1" Margin="10,0" VerticalAlignment="top" Padding="3" Height="{StaticResource InputBoxMinHeight}"/>
        <telerik:RadDateTimePicker Name="von" MinHeight="{StaticResource InputBoxMinHeight}" MinWidth="{StaticResource InputBoxMinWidth}" Grid.Column="0" VerticalAlignment="Top"/>
        <telerik:RadDateTimePicker Name="bis" MinHeight="{StaticResource InputBoxMinHeight}" MinWidth="{StaticResource InputBoxMinWidth}" Grid.Column="2" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
