<UserControl x:Class="Personaleinsatzplanung.CustomControls.LabelledRadioButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personaleinsatzplanung.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="lbl" Height="20" Padding="3,0" VerticalContentAlignment="Center" Content="Label" Grid.Column="1" VerticalAlignment="Top" MouseLeftButtonDown="lbl_MouseLeftButtonDown" MouseLeftButtonUp="lbl_MouseLeftButtonUp" MouseLeave="lbl_MouseLeave"/>
        <RadioButton Name="radioButton" Grid.Column="0" VerticalContentAlignment="Center" Height="{StaticResource InputBoxMinHeight}" VerticalAlignment="Top" Margin="0,0,10,0" MinHeight="{StaticResource InputBoxMinHeight}"/>
    </Grid>
</UserControl>
