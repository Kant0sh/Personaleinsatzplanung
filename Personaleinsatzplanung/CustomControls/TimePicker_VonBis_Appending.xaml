<UserControl x:Class="Personaleinsatzplanung.CustomControls.TimePicker_VonBis_Appending"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personaleinsatzplanung.CustomControls"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:CustomControls="clr-namespace:Personaleinsatzplanung.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <CustomControls:TimePicker_VonBis x:Name="tp"/>
        <Button Grid.Column="3" Width="{StaticResource InputBoxMinHeight}" Height="{StaticResource InputBoxMinHeight}" VerticalAlignment="Top" Margin="3,0,0,0" Click="Button_Click">+</Button>
    </Grid>
</UserControl>
